@page
@model WebApp.Pages_PizzaTopings.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PizzaToping</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PizzaToping.PizzaId" value="@Model.Id"/>
            <div class="form-group">
                <label asp-for="PizzaToping.ToppingId" class="control-label"></label>
                <select asp-for="PizzaToping.ToppingId" class ="form-control" asp-items="@Model.Toppings"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model WebApp.Pages_Configs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Config</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Config.ConfigName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Config.ConfigName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Config.IsRandom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Config.IsRandom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Config.BoardSizeX)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Config.BoardSizeX)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Config.BoardSizeY)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Config.BoardSizeY)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Config.TouchRule)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Config.TouchRule)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Config.CreationTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Config.CreationTime)
        </dd>
    </dl>
</div>
<div>
    <table class="table">
        <thead>
        <tr>
            <th>
                Ship Name
            </th>
            <th>
                Quantity
            </th>
            <th>
                Ship Height (y-axis)
            </th>
            <th>
                Ship Length (x-axis)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.ConfigShips)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ship!.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ship!.ShipHeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ship!.ShipLength)
                </td>
                <td>
                    <a asp-page="/ConfigShips/Details" asp-route-id="@item.ConfigShipId">Details</a> |
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Config.ConfigId">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>
</div>
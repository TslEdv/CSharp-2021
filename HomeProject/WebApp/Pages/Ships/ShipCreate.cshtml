@page
@model WebApp.Pages.ShipCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ConfigShip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ship.Name" class="control-label"></label>
                <input asp-for="Ship.Name" class="form-control" />
                <span asp-validation-for="Ship.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ship.ShipHeight" class="control-label"></label>
                <input asp-for="Ship.ShipHeight" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Ship.ShipLength" class="control-label"></label>
                <input asp-for="Ship.ShipLength" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>